@model IEnumerable<WebApplication.Models.Post>

@{
    ViewBag.Title = "YourPosts";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<header class="account-header">

    <nav id="top">

        <img src="~/Images/logo_sgO_icon.ico" width="40" height="40" />
        <li><a href="/Home">Home</a></li>
        <li><a href="Recipes">Recipes</a></li>
        <li><a href="About">About</a></li>
        <li><a href="Logout">Logout</a></li>
    </nav>
</header>


<link href="https://fonts.googleapis.com/css?family=Baloo+Chettan+2:400,700&display=swap" rel="stylesheet">


<h2>Your Posts</h2>

<p class="create" style="text-align:center;">
    <a href="/Home/MyAccount" class="top-button pulsate">Go back to My Account</a>
</p>
<table class="table">

    @foreach (var item in Model)
    {
	<div class='recipe-card'>
		<h1 class="recipe-card__heading">@Html.DisplayFor(modelItem => item.PostTitle)</h1>

		<p class="account-info">
			Posted By  :
			@Html.DisplayFor(modelItem => item.PostAuthor)
		</p>


		<img src="@Html.DisplayFor(modelItem => item.PostPhoto)" class="food-img" />

		<btn class="edit-buttons">
			<a href="Delete/@item.PostID">Delete</a>
		</btn>
		
		<div class="recipe-card__body">

			<h2 class="recipe-card__subhead"></h2>

			<ul class="recipe-card__nav">
				
					<h3 class="active">Description</h3>
				

			</ul>
			<ul class="recipe-card__ingredients">
				@Html.Raw(item.PostContent)
			</ul>

		</div>

	</div>
	
        }
</table>


<style>

    body {
        background-image: url('../../Images/yourpostbg.jpeg');
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        font: 13px 'Open Sans', sans-serif;
        color: white;
        font-family: 'Baloo Chettan 2', cursive;
    }


    .create a {
        font-weight: 200;
        background-color: red;
        padding: 5px;
        border-radius: 50px;
        color: white;
        font-size: 20px;
        text-shadow: 0 0 15px rgba(0, 0, 0, 0.6);
        transition: color 0.5s ease-in 0.1s, font-size 1s ease, letter-spacing 1s ease-out, text-shadow 1s cubic-bezier(0.6,0,0.8,0.5)
    }

        .create a:hover {
            background: #fff;
            color: black;
            border: none;
            text-decoration: none;
            box-shadow: 0px 0px 8px darkred;
            font-size: 22px;
        }

    h2 {
        color: rgba(255, 255, 255, 0.9);
        font-size: 60px;
        font-weight: 700;
        text-align: center;
        margin: 15px;
        text-shadow: 0 0 15px rgba(0, 0, 0, 0.6);
    }


    img.food-img {
        display: block;
        margin-left: auto;
        margin-right: auto;
        width: max-content;
        height: 400px;
        object-fit: cover;
        padding-top: 10px;
        border-radius: 30px;
    }

    .edit-buttons a {
        position: center;
        background-color: red;
        border-radius: 20px;
        padding: 7px;
        margin: 20px;
        font-size: 20px;
        text-decoration: none;
        color: white;
        transition: color 0.5s ease-in 0.1s, font-size 1s ease, letter-spacing 1s ease-out, text-shadow 1s cubic-bezier(0.6,0,0.8,0.5)
    }

        .edit-buttons a:hover {
            background: #fff;
            color: black;
            border: none;
            text-decoration: none;
            box-shadow: 0px 0px 8px darkred;
            font-size: 21px;
        }

	.recipe-card {
		box-shadow: 0px 0px 20px 1px red;
		width: 900px;
		margin: 50px auto;
		border-radius: 50px;
		background: linear-gradient(rgba(0, 0, 0, 0.4),rgb(0,0,0,0.4));
		backdrop-filter: blur(5px);
		transition: color 0.5s ease-in 0.1s, font-size 1s ease, backdrop-filter 2s, box-shadow 1s ease,letter-spacing 1s ease-out, text-shadow 1s cubic-bezier(0.6,0,0.8,0.5)
	}

		.recipe-card:hover {
			box-shadow: 0px 0px 20px 1px white;
			backdrop-filter: blur(9px);
		}

    .recipe-card__body {
        padding: 20px;
    }

    .recipe-card__heading {
        padding-left: 40px;
        padding-top: 20px;
        margin: 0 0 0;
        color: white;
        text-shadow: 0px 0px 8px darkred;
        text-align: left;
        text-transform: capitalize;
    }

	.account-info {
		padding-left: 40px;
        font-size: 15px;
	}

    .recipe-card__subhead {
        font-size: 13px;
        color: white;
        margin-bottom: 30px;
    }

    .recipe-card__ingredients {
        list-style: none;
        margin: 0;
        padding: 0;
        margin-left: 10px;
        column-count: 1;
        font-size: 15px;
        padding-left: 20px;
    }


    .recipe-card__nav {
        margin: 0 0 20px;
        padding: 0;
        border-bottom: 1px solid red;
    }




    @@media (min-width:499px) {
        .recipe-card {
            width: 500px
        }

        img.food-img {
            margin-bottom: 40px;
            width: 50%;
            height: 200px;
        }

        .recipe-card__ingredients {
            column-count: 2
        }
    }

    @@media (min-width: 899px) {
        .recipe-card {
            width: 900px
        }

        img.food-img {
            margin-bottom: 20px;
            width: 50%;
            height: 400px;
        }

        .recipe-card__ingredients {
            column-count: 1
        }
    }
</style>
